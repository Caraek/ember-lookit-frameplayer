{{! template-lint-disable triple-curlies }}

<div class="row exp-lookit-video-assent">
    <div class="col-md-12">
        <span class="video-assent-title">Child assent to participate</span>
        <hr>
    </div>

    <div class="col-md-9 assent-procedure">
        <div class="video-consent-numbered-direction">
            <span class="video-consent-number">1.</span>
            <span class="video-consent-direction">Read to learn about the study:</span>
            <button id="downloadbutton" class="btn btn-outline-dark right" {{action 'download'}}>( <i class="fa fa-download"></i> Download)</button>
        </div>

        <div class="center">

            <div class="well video-consent-doc" id="consent-form-text">

                <div class="col-md-10 col-md-offset-1 assent-info text-center">
                    {{#if currentVideo.imgSrc}}

                        <img class="exp-lookit-preview-image" src={{currentVideo.imgSrc}} alt="Image preview">

                    {{else}}

                        {{#if currentVideo.sources}}

                            <video class="exp-lookit-preview-video" controls style="width: 100%;">
                                {{#each currentVideo.sources as |vidsource|}}
                                    <source src={{vidsource.src}} type={{vidsource.type}}>
                                {{/each}}
                                Your browser does not support the video tag.
                            </video>

                        {{/if}}

                    {{/if}}

                    {{#if currentVideo.textBlocks}}
                        <div class="assent-instruction-text">
                            {{#each currentVideo.textBlocks as |textBlock|}}
                                {{exp-text-block block=textBlock}}
                            {{/each}}
                        </div>
                    {{/if}}

                </div>

                <div class="row exp-controls">
                    <div class="col-md-12 text-center">
                        {{!--<button class="btn btn-default pull-left" {{action 'next'}}>End preview</button>--}}
                        <button disabled={{noPrev}} {{action 'previousVideo'}} class="btn btn-primary pull-left">
                            {{previousStimulusText}}
                        </button>
                        {{#if noNext}}
                            <button disabled={{noNext}} {{action 'nextVideo'}} class="btn btn-success pull-right"> {{nextStimulusText}}</button>
                        {{else}}
                            <button {{action 'nextVideo'}} class="btn btn-success pull-right"> {{nextStimulusText}}</button>
                        {{/if}}
                    </div>
                </div>


            </div>
        </div>
    </div>


    <div class="col-md-3">

        <div class="row recorder-container">
            <div id="recorder" class="col-xs-12"></div>
        </div>

        <div class="video-consent-numbered-direction">
            <span class="video-consent-number">2.</span>
            <span class="video-consent-direction">Decide if you want to participate</span>
        </div>

        <div class="well video-assent-prompt">
            <div class="question"> Do you want to participate in this study? </div>
            <button id="yesbutton" disabled="disabled" class="btn btn-danger pull-left">No <i class="fa fa-thumbs-down"></i></button>
            <button id="nobutton"  disabled="disabled" class="btn btn-success pull-right"><i class="fa fa-thumbs-up"></i> Yes</button>
            <div> </div>
        </div>

        <button id="submitbutton" disabled="disabled" class="btn btn-success pull-right" {{ action 'finish' }}>submit <i class="fa fa-caret-right"></i></button>

    </div>
</div>

