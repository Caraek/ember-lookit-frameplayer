<div>
     <div class="row recorder-container video-recorder-hidden">
      <div id="recorder" class="col-xs-12">
      </div>
    </div>

    {{#if showIntro}}

      <div>
        <button class="intro-button" {{ action 'next' }}>Start</button>
        <img src={{source}} class="intro"
                alt="background">
      </div>

    {{/if}}

    {{#if showProgress}}

        <div class="box-set">
            <button class={{button_position}} {{ action 'play' }} >Play</button>
            <img src={{machine1_url}} class="box box-1" alt="Machine slot">
            <img src={{machine2_url}}  class="box box-2" alt="Machine slot">
            <img src={{machine3_url}}  class="box box-3" alt="Machine slot">
            <img src={{machine4_url}}  class="box box-4" alt="Machine slot">
            <img src={{machine5_url}}  class="box box-5" alt="Machine slot">
            <img src={{arrow1_url}}  class="arrow arrow-1" alt="Machine slot">
            <img src={{arrow2_url}}  class="arrow arrow-2" alt="Machine slot">
            <img src={{arrow3_url}}  class="arrow arrow-3" alt="Machine slot">
            <img src={{arrow4_url}}  class="arrow arrow-4" alt="Machine slot">
            <img src={{arrow5_url}}  class="arrow arrow-5" alt="Machine slot">
            <img src={{exit_url}}   class="door" alt="Machine slot">
        </div>

    {{/if}}

    {{#if showInstructions}}
        <h1> {{gameDescription}} </h1>
        <hr>
        <p> {{instructions}}</p>
        <hr >
        <button class="btn btn-success" {{ action 'play' }} >Play</button>

    {{/if}}
    <canvas  id="gamesCanvas"  height="0" width="0"></canvas>
</div>



